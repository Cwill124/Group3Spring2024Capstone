    <Grid>
        <TextBox x:Name="txtUrl" HorizontalAlignment="Left" Margin="65,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="241"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="64,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="242"/>
