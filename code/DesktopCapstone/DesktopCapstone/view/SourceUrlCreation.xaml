        <Label Content="Publisher Year:" HorizontalAlignment="Left" Margin="60,190,0,0" VerticalAlignment="Top"/>
        <Label Content="Create Source URL" HorizontalAlignment="Left" Margin="131,5,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.515,0.592"/>

