        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="TagFilterPage" Height="247" Width="342">

    <Grid Background="White">
        <Label Content="Filter By Tag" HorizontalAlignment="Center" Margin="0,27,0,0" VerticalAlignment="Top"
               Height="42" Width="159" FontSize="24" />
        <ComboBox x:Name="cmbTag" HorizontalAlignment="Center" Margin="0,98,0,0" VerticalAlignment="Top" Width="120" />
        <Label Content="Tag:" HorizontalAlignment="Left" Margin="52,91,0,0" VerticalAlignment="Top" FontSize="18" />
        <Button x:Name="btnFilter" Content="Filter" HorizontalAlignment="Center" Margin="0,168,0,0"
