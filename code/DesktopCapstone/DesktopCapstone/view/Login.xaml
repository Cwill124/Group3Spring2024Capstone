<Window x:Class="desktop_capstone.view.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:desktop_capstone.view"
        mc:Ignorable="d"
        Title="Login" Height="334" Width="399">
    <Grid Margin="0,0,0,-6">
        <TextBox x:Name="txtUsername" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Center" Margin="0,219,0,0" VerticalAlignment="Top" Click="btnLogin_Click"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center" Margin="0,187,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Login" HorizontalAlignment="Center" Margin="0,71,0,0" VerticalAlignment="Top" FontSize="22"/>
        <Label Content="username:" HorizontalAlignment="Left" Margin="75,0,0,0" VerticalAlignment="Center"/>
        <Label Content="password:" HorizontalAlignment="Left" Margin="72,183,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSignUp" Content="Sign Up" HorizontalAlignment="Center" Margin="0,255,0,0" VerticalAlignment="Top" Click="btnSignUp_Click"/>

    </Grid>
</Window>
