<Window x:Class="DesktopCapstone.view.SourcesViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopCapstone.view"
        mc:Ignorable="d"
        Title="SourcesViewer"  Height="450" Width="668">
    <Grid>
        <Label Content="Sources:" HorizontalAlignment="Left" Margin="90,91,0,0" VerticalAlignment="Top" FontSize="24"/>
        <ListView x:Name="lstSources" d:ItemsSource="{Binding Sources, Mode=TwoWay}" Margin="90,139,46,49" ItemsSource="{Binding Uid, ElementName=lstSources}" SelectionChanged="lstSources_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="60"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnAddSource" Content="+" HorizontalAlignment="Left" Margin="576,91,0,0" VerticalAlignment="Top" Click="btnAddSource_Click" FontSize="24" Height="43" Width="32"/>
        <Button x:Name="btnReturn" Content="Return" HorizontalAlignment="Left" Margin="29,29,0,0" VerticalAlignment="Top" FontSize="24" Click="btnReturn_Click"/>

    </Grid>
</Window>
