<Window x:Class="DesktopCapstone.view.NoteCreation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopCapstone.view"
        mc:Ignorable="d"
        Title="NoteCreation" Height="249" Width="311">
    <Grid>
        <Label Content="Create Note" HorizontalAlignment="Center" Margin="0,22,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="Title:" HorizontalAlignment="Left" Margin="43,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTitle" HorizontalAlignment="Left" Margin="43,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="231"/>
        <TextBox x:Name="txtContent" HorizontalAlignment="Left" Margin="43,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="231" Height="56"/>
        <Label Content="Content:" HorizontalAlignment="Left" Margin="43,95,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnClear" Content="Clear" HorizontalAlignment="Left" Margin="79,182,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnCreate" Content="Create" HorizontalAlignment="Left" Margin="169,183,0,0" VerticalAlignment="Top" Click="btnCreate_Click"/>

    </Grid>
</Window>
